<?xml version="1.0" encoding="utf-8" ?>
<!-- Class 填写对应类名 -->
<Body
	Class="SilkyUIFramework.UserInterfaces.Test.TestUI"
	Left="50#" Top="75#" FlexDirection="Row" BackgroundColor="#00000000" BorderColor="#00000000"
	FitWidth="true" FitHeight="true" Padding="0">
	<!-- Name 属性设置后，会在类中生成一个属性，名为 Name 属性的值 -->
	<!-- 此属性会在 InitializeComponent(); 中初始化并将这个对象赋给属性 -->
	<ElementGroup Name="Container" FitWidth="true" FitHeight="true" Gap="20">
		<!-- 这是悬浮的那个元素 -->
		<!-- Positioning="Absolute" 是设置定位为绝对定位，即相对父元素定位，脱离布局管理 -->
		<ElementGroup
			Name="HoverView" Border="2" BorderRadius="8" BorderColor="#0099FF"
			BackgroundColor="#00000000" Left="0px -50% 50#" Top="0px -50% 50#"
			Positioning="Absolute" Width="80px" Height="80px"  />
	</ElementGroup>
</Body>